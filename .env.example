# Environment variables for DY Crane Safety Management System
# Rename this file to .env and fill in the values.

# PostgreSQL Database Connection
# These variables are required for the application to connect to the database.
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=admin
PGDATABASE=craneops

# Application Environment
# Set to 'development' for local development, 'production' for deployment,
# or 'test' when running tests.
ENVIRONMENT=development

# API Configuration (Optional)
# These are the default values. You can override them if needed.
# API_HOST=127.0.0.1
# API_PORT=8000

# E2E Test Configuration (Optional)
# Base URL for the E2E tests.
E2E_BASE_URL=http://127.0.0.1:8000

# Logging Level (Optional)
# Can be DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# SQLAlchemy Logging (Optional)
# Set to 'true' to echo all SQL statements to the console.
DB_ECHO=false
